@using DangThiToMy_2122110067.Model
@model DashboardViewModel

<h2>Danh sách Dữ Liệu</h2>

<h3>Banners</h3>
<a href="@Url.Action("CreateBanner", "Dashboard")" class="btn btn-success mb-2">Thêm Banner</a>
<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Tiêu đề</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Banners)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>
                    <a href="@Url.Action("Edit", "Dashboard", new { id = item.Id })" class="btn btn-primary btn-sm">Sửa</a>
                    <a href="@Url.Action("Delete", "Dashboard", new { id = item.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Bạn chắc chắn muốn xóa?')">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>


@model IEnumerable<DangThiToMy_2122110067.Model.User>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">👤 Danh sách Người dùng</h2>
        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">← Quay về Dashboard</a>
    </div>

    <a asp-action="AddUser" class="btn btn-success mb-3">+ Thêm mới</a>

    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-primary text-center">
            <tr>
                <th>ID</th>
                <th>Tên đăng nhập</th>
                <th>Ảnh đại diện</th>
                <th>Mật khẩu</th>
                <th>Email</th>
                <th>Điện thoại</th>
                <th>Địa chỉ</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@item.Id</td>
                    <td>@item.Username</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Image))
                        {
                            <img src="@item.Image" alt="Avatar" style="max-height: 50px;" class="rounded-circle" />
                        }
                        else
                        {
                            <span class="text-muted">Không có ảnh</span>
                        }
                    </td>
                    <td><span class="text-muted">******</span></td> <!-- Ẩn mật khẩu -->
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td>@item.Address</td>
                    <td class="text-center">
                        <a asp-action="EditUser" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">✏️ Sửa</a>
                        <a asp-action="DeleteUser" asp-route-id="@item.Id" class="btn btn-sm btn-danger">🗑️ Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

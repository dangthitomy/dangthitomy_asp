@model IEnumerable<DangThiToMy_2122110067.Model.Product>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary mb-0">🛒 Danh sách Sản phẩm</h2>
        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary">← Quay về Dashboard</a>
    </div>

    <a asp-action="AddProduct" class="btn btn-success mb-3">+ Thêm mới</a>

    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-primary text-center">
            <tr>
                <th>ID</th>
                <th>Tên sản phẩm</th>
                <th>Hình ảnh</th>
                <th>Giá</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Image))
                        {
                            <img src="@item.Image" alt="Ảnh sản phẩm" style="max-height: 60px;" />
                        }
                        else
                        {
                            <span class="text-muted">Không có ảnh</span>
                        }
                    </td>
                    <td>@Convert.ToDecimal(item.Price).ToString("N0") ₫</td>
                    <td class="text-center">
                        <a asp-action="EditProduct" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Sửa</a>
                        <a asp-action="DeleteProduct" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

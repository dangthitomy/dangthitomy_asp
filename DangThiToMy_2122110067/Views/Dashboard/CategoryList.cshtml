@model IEnumerable<DangThiToMy_2122110067.Model.Category>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">📁 Danh sách Category</h2>
        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">← Quay về Dashboard</a>
    </div>

    <a asp-action="AddCategory" class="btn btn-success mb-3">+ Thêm mới</a>

    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-primary text-center">
            <tr>
                <th>ID</th>
                <th>Tên Category</th>
                <th>Mô tả</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Description))
                        {
                            @item.Description
                        }
                        else
                        {
                            <span class="text-muted">Không có mô tả</span>
                        }
                    </td>
                    <td class="text-center">
                        <a asp-action="EditCategory" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">✏️ Sửa</a>
                        <a asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-sm btn-danger">🗑️ Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@model DangThiToMy_2122110067.Model.Banner

@{
    ViewData["Title"] = "Thêm";
    ViewData["Action"] = "AddBanner";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary mb-0">➕ Thêm Banner</h2>
        <a asp-action="BannerList" class="btn btn-outline-secondary">← Quay về danh sách</a>
    </div>

    <form asp-action="@ViewData["Action"]" method="post">
        <div class="form-group mb-3">
            <label>Tiêu đề</label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div class="form-group mb-3">
            <label>Ảnh</label>
            <input asp-for="ImageUrl" class="form-control" />
        </div>
        <div class="form-group mb-3">
            <label>Link</label>
            <input asp-for="Link" class="form-control" />
        </div>
        <div class="form-group form-check mb-3">
            <input asp-for="IsActive" type="checkbox" class="form-check-input" />
            <label class="form-check-label">Hiển thị</label>
        </div>
        <button type="submit" class="btn btn-success">💾 Lưu</button>
    </form>
</div>

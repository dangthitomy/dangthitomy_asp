@model DangThiToMy_2122110067.Model.Banner

@{
    ViewData["Title"] = "Sửa";
    ViewData["Action"] = "EditBanner";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-warning mb-0">✏️ Sửa Banner</h2>
        <a asp-action="BannerList" class="btn btn-outline-secondary">← Quay về danh sách</a>
    </div>

    <form asp-action="@ViewData["Action"]" method="post">
        <div class="form-group mb-3">
            <label for="Title">Tiêu đề</label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label for="ImageUrl">Link ảnh</label>
            <input asp-for="ImageUrl" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label for="Link">Link chuyển hướng</label>
            <input asp-for="Link" class="form-control" />
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsActive" type="checkbox" class="form-check-input" id="IsActive" />
            <label class="form-check-label" for="IsActive">Hiển thị</label>
        </div>

        <button type="submit" class="btn btn-success">💾 Lưu thay đổi</button>
    </form>
</div>
